# Staging Environment Configuration
# Used for pre-production testing

# Flask Configuration
FLASK_ENV=staging
FLASK_DEBUG=False
SECRET_KEY=${SECRET_KEY}  # Load from environment or secret manager

# Database (Cloud SQL or staging PostgreSQL)
DATABASE_URL=${DATABASE_URL}

# API Keys (use staging/sandbox keys)
GEMINI_API_KEY=${GEMINI_API_KEY}
MONDAY_API_KEY=${MONDAY_API_KEY}
API_KEY=${API_KEY}

# Redis
REDIS_URL=${REDIS_URL}

# Email (use real SMTP but with staging domain)
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=staging@novahouse.pl

# Twilio (use test credentials or low-volume account)
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Google Cloud
GCP_PROJECT_ID=${GCP_PROJECT_ID}
GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcp-key.json

# Sentry (separate staging project)
SENTRY_DSN=${SENTRY_DSN_STAGING}
SENTRY_ENVIRONMENT=staging

# CORS (staging domains only)
ALLOWED_ORIGINS=https://staging.novahouse.pl,https://staging-api.novahouse.pl

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (moderate limits)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=500 per hour

# File Upload
UPLOAD_FOLDER=gs://novahouse-staging-uploads
MAX_CONTENT_LENGTH=52428800  # 50MB

# Port
PORT=8080
