# Development Environment Configuration
# Copy to .env for local development

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Database (SQLite for local dev)
DATABASE_URL=sqlite:///local_dev.db

# API Keys (use test/sandbox keys)
GEMINI_API_KEY=your-gemini-test-key-here
MONDAY_API_KEY=your-monday-test-key-here
API_KEY=dev-api-key-12345

# Redis (optional for local)
REDIS_URL=redis://localhost:6379

# Email (use Mailtrap or similar for testing)
SMTP_SERVER=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your-mailtrap-username
SMTP_PASSWORD=your-mailtrap-password
EMAIL_FROM=dev@novahouse.local

# Twilio (use test credentials)
TWILIO_ACCOUNT_SID=test_account_sid
TWILIO_AUTH_TOKEN=test_auth_token
TWILIO_PHONE_NUMBER=+15005550006

# Google Cloud (not needed for local dev)
# GCP_PROJECT_ID=
# GOOGLE_APPLICATION_CREDENTIALS=

# Sentry (disabled in dev)
# SENTRY_DSN=

# CORS (allow all in dev)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Rate Limiting (relaxed for dev)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_DEFAULT=1000 per hour

# File Upload
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=52428800  # 50MB

# Port
PORT=8080
