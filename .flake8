[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    migrations/
# E402: module level import not at top of file
# E501: line too long (CAŁKOWICIE IGNOROWANE - teksty użytkownika, HTML, tłumaczenia)
# W291: trailing whitespace
# W292: no newline at end of file
# W293: blank line contains whitespace
# F401: imported but unused
# F841: local variable assigned but never used
# E302: expected 2 blank lines
# E305: expected 2 blank lines after class or function definition
# E741: ambiguous variable name
ignore = E203,E402,E501,W503,W291,W292,W293
per-file-ignores =
    src/knowledge/novahouse_info.py:E501,W291
    src/main.py:E402,E501
    src/routes/chatbot.py:E501,E302,E741
    src/routes/swagger_ui.py:E501
    src/api_v1.py:E402,F401,W291,E302
    src/middleware/rate_limiting.py:E302,W291
    migrations/env.py:E402,E501,F401
    scripts/*.py:E501,F401
    tests/*.py:E501,F401,E128
