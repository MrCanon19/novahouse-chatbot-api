[Unit]
Description=NovaHouse Chatbot API
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/novahouse-chatbot-api
Environment="PATH=/path/to/novahouse-chatbot-api/venv/bin"
Environment="ADMIN_API_KEY=changeme"
ExecStart=/path/to/novahouse-chatbot-api/venv/bin/gunicorn -w 4 -b 0.0.0.0:8080 main:app

[Install]
WantedBy=multi-user.target
