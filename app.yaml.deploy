runtime: python311
entrypoint: gunicorn -c config/gunicorn.conf.py src.main:app

instance_class: F2

automatic_scaling:
  min_instances: 0
  max_instances: 5
  target_cpu_utilization: 0.65

env_variables:
  FLASK_ENV: "production"
  DATABASE_URL: "sqlite:///novahouse.db"
  OPENAI_API_KEY: ""
